<form action="/Admin/NewsLetter/Email" method="post" class="save-clse-frm">
    @Html.AntiForgeryToken()
    <div style="width: 700px;">
        <div class="msg-to">To</div>
        <div style="max-height: 100px; min-height: 60px; overflow: auto;">
            @Html.Partial("UserSelector", new List<User>())
        </div>
        <hr />
        <div style="min-height:200px">
        <textarea id="msg" name="msg" placeholder="Type your message here"></textarea>
        </div>
        <br />
        <div class="ta-r">
            <a class="btn btn-cancel">Cancel</a>
            <button type="submit" class="btn-primary">Send</button>
            <img src="~/Content/images/busy.gif" class="frm-busy" />
        </div>
        <p>
            @Html.ValidationSummary()
        </p>

        <div class="server-vald-msg validation-summary-errors" data-valmsg-summary="true">
        </div>
    </div>
</form>
<script src="~/Scripts/_save-clse-frm.js"></script>
<script src="~/Scripts/CKEditor/ckeditor.js"></script>
<script type="text/javascript">
    CKEDITOR.replace('msg');
</script>