@model Axb.ActiveAlumni.Nit.Entities.Discussion

@{
    ViewBag.Title = "BlogEdit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div id="blogEdit">
    <form action="/Discussion/BlogEdit" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.DiscussionId)
        @Html.TextBoxFor(m => m.Title, new { placeholder="Blog Title" })
        @Html.TextBoxFor(m => m.TagCsv, new { placeholder="Blog Tags separated by comma" })
        <div>
            @Html.TextAreaFor(x => x.Content)
        </div>
        <br />
        <div class="ta-r">
            <a class="btn btn-cancel">Cancel</a>
            <button type="submit" class="btn-primary">@(Model.IsNew ? "Post" : "Update") Blog</button>
            <img src="~/Content/images/busy.gif" class="frm-busy" />
        </div>
        <p>
            @Html.ValidationSummary()
        </p>
    </form>
</div>

@section Scripts
{
    <script src="~/Scripts/CKEditor/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('Content');
    </script>
}