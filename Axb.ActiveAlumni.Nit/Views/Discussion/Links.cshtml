@model IEnumerable<Axb.ActiveAlumni.Nit.Entities.Discussion>
@using Axb.ActiveAlumni.Nit.Infrastructure

<ul class="cmnt-links">
    @foreach (var link in Model)
    {
        var cmt = link.Comments[0];
        <li>
            <div>
                <a  href="/Discussions/@link.DiscussionId" class="title">@link.Title</a>
            </div>
            <div class="cmnt-cnt">
                <a class="user" href="@Routes.Profile(cmt.SenderId)">by @cmt.SenderName</a>
                <span class="ft-r">
                    <i class="icon-comment"></i> @(link.Comments.Count - 1) @DisplayHelper.DateTime(link.Comments.Last().Date, DateTypes.Short)
                </span>
            </div>
        </li>
    }
</ul>
<script src="~/Scripts/_time.js"></script>
