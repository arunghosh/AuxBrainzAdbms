@model Axb.ActiveAlumni.Nit.Entities.Poll

<form action="\poll\edit" method="post" class="save-clse-frm" style="width:400px; margin:10px;">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PollId)
    @Html.HiddenFor(m => m.PollTypeId)
    @Html.HiddenFor(m => m.PollType)
    <label>Poll Question</label>
    <textarea name="Question" style="width:90%"></textarea>
    <div>
        @*@Html.CheckBoxFor(m => m.IsPublic)*@
        @*@Html.Bootstrap().LabelFor(m => m.IsPublic)*@
    </div>
    <br />
    <div>
        <a class="btn btn-cancel">Cancel</a>
        <button type="submit" class="btn-primary">@(Model.IsNew ? "Create" : "Update") Poll</button>
        <img src="~/Content/images/busy.gif" class="frm-busy" />
    </div>
</form>

<script src="~/Scripts/_save-clse-frm.js"></script>

