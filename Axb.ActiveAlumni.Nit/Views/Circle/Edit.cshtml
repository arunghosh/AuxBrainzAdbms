@model Axb.ActiveAlumni.Nit.ViewModels.CircleEdit

<div style="width: 670px;">
    @using (Html.BeginForm("Update", "Circle", FormMethod.Post, new { @class = "save-clse-frm", data_refresh = "true" }))
    {
        @Html.HiddenFor(c => c.Id)
        <h6>Name</h6>
        @Html.TextBoxFor(c => c.Name)
        @Html.AntiForgeryToken()
        <h6>Members</h6>
        <div class="user-sele-ctnr" style="height: 250px;">
            @Html.Partial("UserSelector", Model.Users)
        </div>
            <a class="btn btn-cancel">Cancel</a>
        <button type="submit" class="btn-primary">Update</button>
            <img src="~/Content/images/busy.gif" class="frm-busy" />
        <p>
            @Html.ValidationSummary()
        </p>

        <div class="server-vald-msg validation-summary-errors" data-valmsg-summary="true">
        </div>        
    }
    @if (Model.Id != 0)
    {
        using (Html.BeginForm("Remove", "Circle", FormMethod.Post, new { @class = "save-clse-frm", data_refresh = "true" }))
        {
        <button class="btn">Remove <b>@Model.Name</b> circle</button>
        @Html.Hidden("id", Model.Id)
        @Html.AntiForgeryToken()
        }
    }
</div>

<script src="~/Scripts/_save-clse-frm.js"></script>
