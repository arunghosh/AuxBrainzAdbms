<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    @if (ViewBag.Meta == null)
    {
        <title>@ViewBag.Title</title>
        <meta name="title" content="Official Online Portal for NIT Calicut Alumni Association" />
        <meta name="description" content="Official Online Portal of NIT/REC Calicut Alumni Association. NITC Alumni Association is the organisation of the old students of NIT/REC Calicut. This is an online platform to reach out to all the alumni members." />
    }
    else
    {
        <title>@ViewBag.Meta</title>
        <meta name="title" content="@ViewBag.Meta" />
        <meta name="description" content="@ViewBag.MetaD" />
        <meta name="og:image" content="@ViewBag.OgImg" />
    }
    @*<link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700' rel='stylesheet' type='text/css'>*@
    <meta name="keywords" content="NIT Calicut Alumni Association, NIT Alumni, NIT Calicut, NIT, Calicut, Alumni, NITCAA, REC, RECAA, National Institute of Technology, Kozhikode, Regional Engineering College, REC Calicut" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    <script>
        window.onresize = function () {
            axbOnResize();
        };
    </script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
        ga('create', 'UA-46725260-1', 'nitcalumni.com');
        ga('send', 'pageview');
    </script>
</head>

<body>
    <div id="headerul">
        <div style="margin: 0 auto;">
            <div class="main-align" id="headCenter" style="padding: 14px 0 2px 0;">
                <div class="head-left">
                    <a href="/" id="companyNameul">
                        @*<img src="~/Content/images/logo32.png" />*@
                        NIT Calicut Alumni
                    </a>
                    <div class="span ft-r" id="nameSearchCtnr">
                        @{Html.RenderAction("NameSearch", "Search", new { area = "" });}
                    </div>
                </div>
                <div class="head-right">
                    <div class="d-ib lazy-load" data-url="/Notification/Index/" data-busy="false">
                        @{Html.RenderAction("Dummy", "Notification", new { area = "" });}
                    </div>
                    @Html.Partial("HeaderLink")
                </div>
            </div>
        </div>

    </div>
    <div id="menuWrap">
        <div id="menu">
            <div id="navCtnr" class="main-align">
                @{Html.RenderAction("Menu", "Navigation", new { area = "" });}
            </div>
        </div>
    </div>
    <div id="mainBk">
        <div class="main-align" id="mainContent">
            @RenderBody()
        </div>
        @{Html.RenderPartial("Overlay");}
        @{Html.RenderPartial("DialogView");}
    </div>
    @{Html.RenderPartial("_Footer");}
    @Scripts.Render("~/bundles/jqueryAndAxb")
    @RenderSection("Scripts")
</body>

</html>
