@model List<Axb.ActiveAlumni.Nit.Entities.User>

@using (Html.BeginForm("ExecuteMessageMany", "Message", FormMethod.Post, new { @class = "save-clse-frm", data_refresh = "true" }))
{
    @Html.AntiForgeryToken()
    <div style="width: 650px;">
        <div class="msg-to">To</div>
        <div style="max-height: 100px; min-height: 60px; overflow: auto;">
            @Html.Partial("UserSelector", Model)
        </div>
        <hr />
        <textarea name="Message" style="width: 98%; height: 130px" placeholder="Type your message" />
        <div>
            <a class="btn btn-cancel">Cancel</a>
            <button type="submit" class="btn-primary">Send</button>
            <img src="~/Content/images/busy.gif" class="frm-busy" />
        </div>
        <p>
            @Html.ValidationSummary()
        </p>

        <div class="server-vald-msg validation-summary-errors" data-valmsg-summary="true">
        </div>
    </div>
}
<script src="~/Scripts/_save-clse-frm.js"></script>
